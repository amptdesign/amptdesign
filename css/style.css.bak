    display: block;
    width: 960px;
    min-height: 2850px;
    margin: 0 auto;
    overflow: hidden;
}

/*  YELLOW ROBOT  */

#yrobo {
    position: absolute;
    z-index: 900;
    display: inline-block;
    margin: 45px 0 0 515px;
